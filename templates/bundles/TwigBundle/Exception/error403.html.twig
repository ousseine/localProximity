{% extends 'base.html.twig' %}

{% block title %} {{ 'Erreur ' ~ status_code }} {% endblock %}

{% block body %}
    <section class="w-full h-screen z-10 bg-background p-6 md:p-8">
        <div class="relative flex md:items-center md:justify-center pt-28 md:pt-0 h-full">
            <div class="container mx-auto">
                <div class="-mx-4 flex">
                    <div class="w-full px-4">
                        <div class="mx-auto max-w-[400px] text-center">
                            <h2 class="mb-2 text-6xl md:text-8xl">{{ status_code }}</h2>
                            <h4 class="mb-5 text-base md:text-lg font-semibold leading-tight text-foreground">{{ status_text|trans }}</h4>
                            <a href="{{ path('survey_index') }}" class="btn btn-outline-primary">Page d'accueil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
