{% set root = app.request.get('_route') %}
{% extends 'base.html.twig' %}
{% block body_id 'admin' %}

{% block title 'Administration | Mobilité & Proximité' %}

{% block body %}
    <div class="relative w-full">
        <div id="sidebar" class="w-[4.6rem] h-screen bg-accent fixed">
            <div class="p-2 h-16 border-b border-border w-full flex justify-center items-center">
                <button class="text-center">
                    <twig:ux:icon name="flowbite:bars-from-left-outline" class="size-6" />
                </button>
            </div>

            <ul class="px-2 py-3 flex items-center flex-col w-full">
                <li class="w-full text-foreground hover:bg-background hover:text-foreground transition-colors duration-300">
                    <a href="{{ path('admin_about_index') }}" class="inline-block w-full flex items-center px-3 py-3">
                        <twig:ux:icon name="mdi:about-circle-outline" class="size-8" />
                        <span class="block ml-4 hidden font-medium text-base">A propos</span>
                    </a>
                </li>
                <li class="w-full text-foreground hover:bg-background hover:text-foreground transition-colors duration-300">
                    <a href="{{ path('admin_answer_index') }}" class="inline-block w-full flex items-center px-3 py-3">
                        <twig:ux:icon name="flowbite:adjustments-horizontal-outline" class="size-8" />
                        <span class="block ml-4 hidden font-medium text-base">Réponse</span>
                    </a>
                </li>
                <li class="w-full text-foreground hover:bg-background hover:text-foreground transition-colors duration-300">
                    <a href="{{ path('admin_survey_index') }}" class="inline-block w-full flex items-center px-3 py-3">
                        <twig:ux:icon name="flowbite:question-circle-outline" class="size-8" />
                        <span class="block ml-4 hidden font-medium text-base">Question</span>
                    </a>
                </li>
                <li class="w-full text-foreground hover:bg-background hover:text-foreground transition-colors duration-300">
                    <a href="{{ path('admin_option_index') }}" class="inline-block w-full flex items-center px-3 py-3">
                        <twig:ux:icon name="flowbite:tag-outline" class="size-8" />
                        <span class="block ml-4 hidden font-medium text-base">Option</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="ml-16 w-[100%-5rem] min-h-screen">
            <header class="px-6 md:px-8 h-16 border-b border-border">
                <div class="py-4 flex items-center justify-between">
                    <div class="font-bold text-lg leading-relaxed">Mobilité et Proximité</div>
                    <div class="flex gap-x-3">
                        <a href="{{ path('logout') }}" class="text-foreground hover:text-foreground/80 transition-colors">
                            <twig:ux:icon name="flowbite:arrow-right-to-bracket-outline" class="size-6"/>
                        </a>
                    </div>
                </div>
            </header>

            <main class="p-6 md:p-8 h-full w-full">
                <div class="w-full">
                    {% block admin %}{% endblock %}
                </div>
            </main>
        </div>
    </div>

