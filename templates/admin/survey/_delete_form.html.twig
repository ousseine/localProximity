<form method="post" action="{{ path('admin_survey_delete', {'id': survey.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ survey.id) }}">
    <button class="text-destructive font-medium text-xs uppercase hover:text-destructive/80 transition-colors duration-300 pb-2">Delete</button>
</form>
