<form method="post" action="{{ path('admin_about_delete', {'id': about.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ about.id) }}">
    <input type="hidden" name="_method" value="DELETE">
    <button class="text-destructive font-medium text-xs uppercase hover:text-destructive/80 transition-colors duration-300">Supprimer</button>
</form>
